<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#DFDFDF">

    <TextView
        android:id="@+id/eventTitleTextViewEventView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="This is an Event Title"
        android:textColor="@color/Black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/eventTextViewEventView"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Time: 12:15 Am"
        android:textColor="@color/Black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventTitleTextViewEventView" />

    <TextView
        android:id="@+id/eventLocationTextViewEventView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location: old racecourse, ballyhaunis, Mayo"
        android:textColor="@color/Black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventTextViewEventView" />


</androidx.constraintlayout.widget.ConstraintLayout>