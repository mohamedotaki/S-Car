<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEventActivity"
    android:background="@color/main">

    <EditText
        android:id="@+id/eventTitleEditTextAddEvent"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="104dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Event Title"
        android:gravity="fill_vertical"
        android:textSize="20dp"
        android:textColor="@color/Black"/>

    <EditText
        android:id="@+id/address1EditTextAddEvent"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="fill_vertical"
        android:hint="Address 1"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/Black"
        app:layout_constraintTop_toBottomOf="@+id/eventTitleEditTextAddEvent" />

    <EditText
        android:id="@+id/townEditTextAddEvent"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="fill_vertical"
        android:hint="town"
        android:textColor="@color/Black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address1EditTextAddEvent" />

    <EditText
        android:id="@+id/countyEditTextAddEvent"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="fill_vertical"
        android:hint="county"
        android:textColor="@color/Black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/townEditTextAddEvent" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/repeatDailySwitchAddEvent"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Repeat Daily"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countyEditTextAddEvent" />

    <ImageButton
        android:id="@+id/dateImageButtonAddEvent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/main"
        android:src="@drawable/time_icon"
        app:layout_constraintEnd_toEndOf="@+id/repeatDailySwitchAddEvent"
        app:layout_constraintTop_toBottomOf="@+id/repeatDailySwitchAddEvent" />

    <TextView
        android:id="@+id/dateTextViewAddEvent"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="fill_vertical"
        android:hint="Date"
        android:textColor="@color/Black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/repeatDailySwitchAddEvent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repeatDailySwitchAddEvent" />

    <Button
        android:id="@+id/addEventButtonAddEvent"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="Add EVENT"
        android:background="@drawable/round_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateTextViewAddEvent" />


</androidx.constraintlayout.widget.ConstraintLayout>